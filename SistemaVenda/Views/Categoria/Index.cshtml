@model List<SistemaVenda.Entidades.Categoria>;
<h2>Categoria</h2>
<hr/>
<table class="table table-bordered">
    <thead>
        <tr style="background-color:#f6f6f6">
            <th>Código</th>
            <th>Descrição</th>

        </tr>
    </thead>
    <tbody> 
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Codigo</td>
            <td>@item.Descricao</td>
        </tr>
        }
    </tbody>
</table>
<br/>
<button type="button" class="btn btn-block btn-primary">Cadastrar Categoria</button>
<script>
    function Cadastrar() {
        window.location = window.origin + "\\Categoria\\Cadastro";
    }
</script>